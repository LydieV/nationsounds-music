{% extends 'base.html.twig' %}

{% block title %}Artistes index{% endblock %}

{% block stylesheets %}
    <style>
        .linkButton:hover{
            color: white;
            text-decoration: none;
        }
        .btn-outline-primary{
            margin-left: 1vw;
            margin-bottom: 2vh;
        }
    </style>

{% endblock %}

{% block body %}
    <h1 class="text-center">Artistes index</h1>

    <button type="button" class="btn btn-outline-primary"> <a href="{{ path('artistes_new') }}" class="linkButton">Créer une nouvelle catégorie</a> </button>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Style</th>
                <th>Modifications </th>
            </tr>
        </thead>
        <tbody>
        {% for artiste in artistes %}
            <tr>
                <td>{{ artiste.id }}</td>
                <td>{{ artiste.name }}</td>
                <td>
                    <a href="{{ path('artistes_show', {'id': artiste.id}) }}" class="badge badge-primary">Voir</a>
                    <a href="{{ path('artistes_edit', {'id': artiste.id}) }}" class="badge badge-primary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

