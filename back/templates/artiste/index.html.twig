{% extends 'base.html.twig' %}

{% block title %}Artiste index{% endblock %}

{% block body %}
    <h1>Artiste index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Style</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artiste in artistes %}
            <tr>
                <td>{{ artiste.id }}</td>
                <td>{{ artiste.name }}</td>
                <td>{{ artiste.style }}</td>
                <td>
                    <a href="{{ path('artiste_show', {'id': artiste.id}) }}" class="badge badge-primary text-uppercase">voir</a>
                    <a href="{{ path('artiste_edit', {'id': artiste.id}) }}" class="badge badge-primary text-uppercase">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('artiste_new') }}" class="badge badge-primary text-uppercase">Cr√©er un nouvel artiste</a>
{% endblock %}
